<%= simple_form_for @apt, :html => {:multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "select a category") %>
  <%= f.file_field :apt_img %>
  <%= f.input :title, label: "Apt Title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit, :class => 'btn-custom2' %>
  <%= f.button :submit %>
<% end %>