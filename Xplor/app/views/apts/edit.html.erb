<div class="col-md-6 col-md-offset-3">

	<div class="edit-apt-form">

		<h1>Edit Apt</h1>

		<%= simple_form_for @apt, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :apt_img %>
			<%= f.input :title, label: "Apt Title" %>
			<%= f.input :description %>
			<%= f.input :author %>
			<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>

</div>